{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "react-native-scales-renderer": ["src/index.ts"]
    },
    "allowJs": false,
    "esModuleInterop": true,
    "target": "es2016",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules",
    "example"
  ]
}
