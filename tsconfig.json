{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,

    "paths": {
      "@/*": [
        "./src/*"
      ]
    },

    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/src",
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
